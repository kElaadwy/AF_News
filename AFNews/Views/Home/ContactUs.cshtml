
@model ContactUs;

<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>العنوان</h2>
            <p>فارسكور بجوار زمبوخة</p>
        </div>

    </div>


    <div class="container" style="margin-top:25px; margin-bottom:25px;">

        <div class="row mt-5">


            <div class="col-lg-12">
                <form asp-action="SaveContact" method="post" >
                    <div class="row">
                        <div class="col form-group">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Your Name" required="">
                        </div>
                        <div class="col form-group mt-3">
                            <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required="">
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required="">
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message" required=""></textarea>
                    </div>
                    <div class="text-center"><button class="btn btn-success" type="submit">Send Message</button></div>
                </form>
            </div>

        </div>

    </div>

    <div>
        <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d892.1777181227836!2d31.71445985617721!3d31.32980923852732!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sgoogle%20maps!5e1!3m2!1sar!2seg!4v1652273040323!5m2!1sar!2seg" frameborder="0" allowfullscreen=""></iframe>
    </div>

</section>